<template id="modal">
  <div class="modal-bg">
    <div class="modal">
      <p class="modal-item_loanDate">Date</p>
      <p class="modal-item_name">Borrower</p>
      <p class="modal-item_object">Item</p>
      <p class="modal-item_amount">#</p>
      <p class="modal-item_responsible">TA</p>
      <p class="modal-item_returnDate">Returned</p>
