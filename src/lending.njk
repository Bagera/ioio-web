        <button class="modal-relend">borrowed</button>
        <button class="modal-return">return</button>
      </div>
    </div>
  </div>
</template>


<div class="form-container">
  <form class="borrow-form">
    <label class="borrow-form_label borrow-form_label-large">
      <span class="borrow-form_label-text">Borrower</span>
      <input
        class="borrow-form_label-input"
        type="text"
        name="name"
        required
      />
    </label>
    <label class="borrow-form_label borrow-form_label-large">
      <span class="borrow-form_label-text">Item</span>
      <input
        class="borrow-form_label-input"
        type="text"
        name="object"
        required
      />
    </label>
    <label class="borrow-form_label borrow-form_label-small">
      <span class="borrow-form_label-text">Count</span>
      <input
        class="borrow-form_label-input"
        type="number"
        min="1"
        name="amount"
        value="1"
      />
    </label>
    <button class="button-action" disabled>Borrow</button>
  </form>
</div>
<p class="borrowed-header"></p>
<table class="loans">
  <thead class="loans-header">
    <th class="loan_loanDate">Loan Date</th>
    <th class="loan_name">Borrower</th>
    <th class="loan_object">Item</th>
    <th class="loan_amount">#</th>
    <th class="loan_responsible">TA</th>
    <th class="loan_returnDate">Returned</th>
  </thead>
  <tbody class="loans-body"></tbody>
</table>
